<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">
	<Dialog id="uploadDialog" title="Upload document" stretchOnPhone="true" contentStyleClass="uploadDialogContent">
		<VBox class="sapUiSmallMargin">
			<Label text="File name" required="true"/>
			<u:FileUploader id="fileUploader" name="uploadFile" placeholder="Choose a file" uploadComplete="onUploadComplete" change="onChangeFile"
				sendXHR="true" useMultipart="false" maximumFileSize="30.0" style="Emphasized" fileSizeExceed="onFileSizeExceed"/>
		</VBox>
		<endButton>
			<Button text="Cancel" press="onCancelUpload" type="Reject"/>
		</endButton>
		<beginButton>
			<Button text="Upload" press="onUpload" type="Emphasized"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>