<mvc:View controllerName="in.compass.vim.ZVIM_APPROVAL_WORKFLOW.controller.Main" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m" xmlns:core="sap.ui.core">
	<!--<Shell id="shell">-->
	<App id="app">
		<pages>
			<Page class="lspage" title="{i18n>title}" enableScrolling="true">
				<content>
					<core:Fragment fragmentName="in.compass.vim.ZVIM_APPROVAL_WORKFLOW.fragment.DetailHeader" type="XML"/>
				</content>
				<footer class="myApprovalFooter">
					<OverflowToolbar class="myApprovalFooter">
						<ToolbarSpacer/>
						<Button id="Approve" type="Emphasized" text="{i18n>btnApprove}" press="_onApprove"/>
						<Button id="Reject" type="Reject" text="{i18n>btnReject}" press="_onApprove"/>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
	<!--</Shell>-->
</mvc:View>